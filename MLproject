name: Cancer_Classification

entry_points:
  data-preprocessing:
    parameters:
      test-size: {type: float, default: 0.3}
    command: "/usr/bin/python3.13 cancer_classification/data_preprocessing.py --test-size {test-size}"
  hyperparameters-tuning:
    parameters:
      n-trials: {type: int, default: 10}
    command: "/usr/bin/python3.13 cancer_classification/hyperparameters_tuning.py --n-trials {n-trials}"
  model-training:
    command: "/usr/bin/python3.13 cancer_classification/model_training.py"
  data-evaluation:
    parameters:
      eval-dataset: {type: str}
    command: "/usr/bin/python3.13 cancer_classification/data_evaluation.py --eval-dataset {eval-dataset}"